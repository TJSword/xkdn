        "serve": "npm run dev",
        "reset": "rimraf node_modules && npm i && vite",
        "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
        "lint:style": "stylelint \"./**/*.{css,scss,vue,html}\" --fix",
        "format": "prettier --write \"./**/*.{html,vue,ts,js,json}\"",
